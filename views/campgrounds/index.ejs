<% layout('layouts/boilerplate')%>
    <div id="cluster-map" ></div>
    <div class="container mt-3 justify-content-center">
    <h1 class="text-align-center">All Campground</h1>
    <ul class="mt-2">
        <% for( let camp of campgrounds) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length){%>
                            <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=camp.images[0].url%>">
                            <%}else{%>
                                <img class="img-fluid" alt=""
                                    src="https://res.cloudinary.com/dhotp2ie1/image/upload/v1655823052/Yelpcamp/l6papyjvybznhj83gh6f.jpg">
                                <%}%>
                    </div>
                    <div class="col-md-8">
                        <div class="car-body mt-2">
                            <h5 class="card-title">
                                <%=camp.title%>
                            </h5>
                            <p class="card-text">
                                <%=camp.description%>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%=camp.location%>
                                </small>
                            </p>
                            <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">
                                View slient Cards
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
    </ul>
</div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
    </script>

    <script src="/javascripts/clusterMap.js"></script>